<!DOCTYPE html>
<html lang="en" ng-app="myModule">
  <head>
    <title>Sign Up</title>
    <% include ./partials/head %>
  </head>

<body class="container" ng-controller="signupCtrl">

<main>
  <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.10/angular.min.js"></script>
  <script src="javascripts/core.js"></script>

  <% include ./partials/devicecheck %>
<sapn>
pagePattern : {{signupPagePattern}}
</span>

<!--
    == Angular ver.(outside) ==
<br />
    UA : {{userUserAgent}}<br />
    device : {{userDevice}}<br />
    mobile: {{userMobile}}<br />

-->

  <div class="jumbotron">
    <h1>Sign Up</h1>

    <h3 style="color:red">
      <% if (message) { %>
        <%= message %><br>
      <% } %>
      <span ng-show"passwordErrorMessage">
        {{passwordErrorMessage}}<br>
      </span>
    </h3>

<div ng-show="signupPagePattern=='patternA'">
<img align="center" width=100 src="http://s3.amazonaws.com/rhs-soccer/wp-content/uploads/2016/04/29102421/a-305x300.png">
</div>
<div ng-show="signupPagePattern=='patternB'">
<img align="center" width=100  src="https://openclipart.org/image/2400px/svg_to_png/87403/Cyrillic-V.png">
</div>
</div>




<div class="panel panel-primary">
<div class="panel-heading">
  <h3 class="panel-title">Input your information!</h3>
</div>
<div class="panel-body">
<form ng-submit="register()">
  <div class="form-group">
    <label for="inputFirstName">First Name</label>
    <input type="text" class="form-control" id="inputFirstName" ng-model="signupData.firstName" name="firstName" aria-describedby="" required placeholder="Michael"/>
  </div>
  <div class="form-group">
    <label for="inputLastName">Last Name</label>
    <input type="text" class="form-control" id="inputLastName" ng-model="signupData.lastName" name="lastName" aria-describedby="" required placeholder="Jackson"/>
  </div>
  <div class="form-group">
    <label for="inputEmail">Email</label>
    <input type="email" class="form-control" id="inputEmail" ng-model="signupData.email" ng-blur="checkEmailRegistered()" name="email" aria-describedby="" required placeholder="user@example.com"/>
    <small id="textlHelp" class="form-text text-muted">{{signupMessage.email}}</small>
  </div>
  <div class="form-group">
    <label for="inputPassword">Password</label>
    <input type="password" class="form-control" id="inputPassword" ng-model="signupData.password" ng-change="checkPasswordCorrect()" ng-blur="displayPasswordMessage()" name="password" aria-describedby="" required placeholder=""/>
    <small id="currentPassword" class="form-text text-muted">current : {{signupData.password}}</small><br />
    <span ng-show="passwordIncorrect">
      <small id="textPasswordMessage" class="form-text text-muted">{{passwordIncorrectMessage}}</small>
    </span>
  </div>
  <div class="form-group">
    <label for="inputUserAgent">UserAgent</label>
    <input type="text" class="form-control" id="inputUserAgent" name="userUserAgent" aria-describedby="" required placeholder="" disabled value={{userUserAgent}} />
  </div>
  <div class="form-group">
    <label for="inputUserAgent">UserDevice</label>
    <input type="text" class="form-control" id="inputUserDevice" name="userDevice" aria-describedby="" required placeholder="" disabled value={{userDevice}}{{userMobile}} />
  </div>

  <button type="submit" value="submit" class="btn btn-primary">Sign Up</button>
</form>
</div>
</div>
 
</main>

<footer>
  <% include ./partials/footer %>
</footer>
    
</body>
</html>
