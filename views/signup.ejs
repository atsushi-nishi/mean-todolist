<!DOCTYPE html>
<html lang="en" ng-app="myModule">
  <head>
    <title>Sign Up</title>
    <% include ./partials/head %>
  </head>

<body class="container" ng-controller="signupCtrl">

<main>
  <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.10/angular.min.js"></script>
  <script src="javascripts/core.js"></script>

  <div class="jumbotron">
    <h1>Sign Up</h1>

    <h3 style="color:red">
      <% if (message) { %>
        <%= message %><br>
      <% } %>
    </h3>
  </div>


<div class="panel panel-primary">
<div class="panel-heading">
  <h3 class="panel-title">Input your information!</h3>
</div>
<div class="panel-body">
<form ng-submit="register()">
  <div class="form-group">
    <label for="inputFirstName">First Name</label>
    <input type="text" class="form-control" id="inputFirstName" ng-model="signupData.firstName" name="firstName" aria-describedby="" required placeholder="Michael"/>
  </div>
  <div class="form-group">
    <label for="inputLastName">Last Name</label>
    <input type="text" class="form-control" id="inputLastName" ng-model="signupData.lastName" name="lastName" aria-describedby="" required placeholder="Jackson"/>
  </div>
  <div class="form-group">
    <label for="inputEmail">Email</label>
    <input type="email" class="form-control" id="inputEmail" ng-model="signupData.email" ng-blur="checkEmailRegistered()" name="email" aria-describedby="" required placeholder="user@example.com"/>
    <small id="textlHelp" class="form-text text-muted">{{signupMessage.email}}</small>
  </div>
  <div class="form-group">
    <label for="inputPassword">Password</label>
    <input type="password" class="form-control" id="inputPassword" ng-model="signupData.password" name="password" aria-describedby="" required placeholder=""/>
  </div>

  <button type="submit" value="submit" class="btn btn-primary">Sign Up</button>
</form>
</div>
</div>
 
</main>

<footer>
  <% include ./partials/footer %>
</footer>
    
</body>
</html>
