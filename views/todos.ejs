        <table class="table">
          <tr>
           <th>id</th><th>Category</th><th>Title</th><th>Status</th><th>Detail</th><th>Due Date</th><th>Create Date</th>
          </tr>
          <tr ng-repeat="todo in todos">
            <td>{{todo._id}}</td>
            <td>
              <span ng-if="todo.category==0">Work</span>
              <span ng-if="todo.category==1">Private</span>
              <span ng-if="todo.category==2">Others</span>
            </td>

            <td>{{todo.title}}</td>
            <td>{{todo.status}}</td>
            <td>{{todo.detail}}</td>
            <td>{{todo.dueDate | date:'yyyy-MM-dd'}}</td>
            <td>{{todo.createDate | date:'yyyy-MM-dd'}}</td>
            <td>
              <span ng-show="todo.status==0">
                <form ng-submit="updateDone(todo)">
                  <button type="submit" value="submit">Done</button>
                </form>
              </span>
              <span ng-show="todo.status==1">
                <form ng-submit="updateUndone(todo)">
                  <button type="submit" value="submit">Undone</button>
                </form>
              </span>
            </td>
            <td>
              <span>
                <form ng-submit="deleteTodo(todo)">
                  <button type="submit" value="submit">Delete</button>
                </form>
              </span>

            </td>
          </tr>
        </table>



