<!DOCTYPE html>
<html lang="en" ng-app="myModule">
<head>
    <% include ./partials/head %>
</head>
<body class="container" ng-controller="todoCtrl">
    <header>
        <% include ./partials/header %>
    </header>


    <main>
        <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.10/angular.min.js"></script>
        <script src="javascripts/core.js"></script>

        <div class="jumbotron">
            <h1>ToDos</h1>
            <p>Action! and Reaction!!</p>
        </div>

<div class="panel panel-primary">
<div class="panel-heading">
  <h3 class="panel-title">Add new todo!</h3>
</div>
<div class="panel-body">
<form method="POST" action="/api/todos">
  <div class="form-group">
    <label for="inputTitle">Title</label>
    <input type="text" class="form-control" id="inputTitle" name="todoTitle" aria-describedby="emailHelp" required placeholder="Go supermarket" />
    <small id="textlHelp" class="form-text text-muted">simple and fun!</small>
  </div>
  <div class="form-group">
    <label for="inputTextarea">Detail</label>
    <textarea class="form-control" id="inputTextarea" name="todoDetail" rows="3" required></textarea>
  </div>
  <div class="form-group">
    <label for="selectCategory">choose Category</label>
    <select class="form-control" id="selectCategory" name="todoCategory">
      <option value=0 selected="selected">Work</option>
      <option value=1>Private</option>
      <option value=2>Others</option>
    </select>
  </div>

<label for="inputeDueDate">Due Date</label>
<div class="container">
    <div class="row">
        <div class='col-sm-6'>
            <div class="form-group">
                <div class='input-group date' id='datetimepicker1'>
                    <input type='text' class="form-control" name="todoDueDate" value="2099-12-31" required>
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div>
            </div>
        </div>
        <script type="text/javascript">
            $(function () {
                $('#datetimepicker1').datetimepicker();
            });
        </script>
    </div>
</div>

  <button type="submit" class="btn btn-primary">Save</button>
</form>
</div>
</div>



        <table class="table">
          <tr>
           <th>id</th><th>Category</th><th>Title</th><th>Status</th><th>Detail</th><th>Due Date</th><th>Create Date</th>
          </tr>
          <tr ng-repeat="todo in todos">
            <td>{{todo._id}}</td>
            <td>
              <span ng-if="todo.category==0">Work</span>
              <span ng-if="todo.category==1">Private</span>
              <span ng-if="todo.category==2">Others</span>
            </td>

            <td>{{todo.title}}</td>
            <td>{{todo.status}}</td>
            <td>{{todo.detail}}</td>
            <td>{{todo.dueDate | date:'yyyy-MM-dd'}}</td>
            <td>{{todo.createDate | date:'yyyy-MM-dd'}}</td>
            <td>
              <span ng-show="todo.status==0">
                <form ng-submit="updateDone(todo)">
                  <button type="submit" value="submit">Done</button>
                </form>
              </span>
              <span ng-show="todo.status==1">
                <form ng-submit="updateUndone(todo)">
                  <button type="submit" value="submit">Undone</button>
                </form>
              </span>
            </td>
            <td>
              <span>
                <form ng-submit="deleteTodo(todo)">
                  <button type="submit" value="submit">Delete</button>
                </form>
              </span>

            </td>
          </tr>
        </table>
    </main>

    <footer>
       <% include ./partials/footer %>
    </footer>
    
</body>
</html>





